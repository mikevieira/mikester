
<div class ="coffeebox col-xs-10 col-xs-offset-1">
 <h1>Enter a New Local Coffee Shop</h1>
 <%= simple_form_for @place do |f| %>
  <%= f.input :name, :placeholder => "Mike's Coffee Shop"%>
  <%= f.input :address, :placeholder => "50 Richmond rd.,Ottawa, Ontario, K1Z5P6 (no spaces in zip/postal code)"%>
  <%= f.input :description, :placeholder => "Great vibe at this place, excellent coffee!"  %> 
  <br/>
  <%= f.submit 'Create', class: 'btn btn primary' %>
 <% end %> 

</div>